<div class='reqested'>
	<h2>Requests</h2>
	<% @requested.each do |request|%>

    <a href="/request/<%=request.id%>" >Request #<%=request.id %>
	</a>

	<h4>needs <%=request.amount%> <%=request.item%> </h4>

	<p><%=request.acpt_story%></p>

</div>
<%end%>

<div class='donated'>
	<h2>Donations</h2>
	<%@donations.each do |donation|%>
	<h4>you donated:<%=donation.amount%> to</h4>
	<a href="/request/<%=donation.request.id%>"><%= donation.request.acpt_story %></a>
	<%end%>
</div>